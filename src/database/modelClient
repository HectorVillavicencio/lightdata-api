const DB = require("./db.json");
const { saveToDatabase} = require("./utils");

const getAllClients = () => {
    return DB.clientes;
};

const createNewClient = (newClient) => {
    const isAlreadyAdded =
      DB.clientes.findIndex((client) => client.email === 
      newClient.email) > -1;
    
      if (isAlreadyAdded) {
      return;
    }
    DB.clientes.push(newClient);
    saveToDatabase(DB);
    return newClient;
  };


  const getOneClient =(id) => {
    const client =
    DB.clientes.find((c) => c.id === id);
    if(!client){
        return;
    }
    return client;
  }

module.exports ={
    getAllClients,
    createNewClient,
    getOneClient
};
